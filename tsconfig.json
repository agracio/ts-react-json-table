{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "jsx": "react",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": false,
        "noEmitOnError": false,
        "removeComments": false,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "typeRoots": [
            "node_modules/@types",
        ]
    },
    "include": [
        "./src/*.ts",
        "./src/*.tsx",
        "./ts-react-json-table.d.ts",
    ],
    "exclude": [
        "./src/table.tsx"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
